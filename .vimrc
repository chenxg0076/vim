"显示行号
set number          
"突出显示当前行
set cursorline      
"打开状态栏标尺
set ruler           
"自动缩进为4个空格
set shiftwidth=4    
"tab转为4个空格
set tabstop=4       
set expandtab
"开启智能缩进
set smartindent
"显示括号匹配
set showmatch
"vim内部编码
set encoding=utf-8
"终端显示编码
set termencoding=utf-8
"文件保存使用编码
set fileencoding=utf-8
"打开文件尝试使用的编码
set fileencodings=ucs-bom,utf-8,gbk,default,latin1
"自动保存
set autowrite
